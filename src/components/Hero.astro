---
export interface Props {
	title: string;
	subtitle: string;
}

const {title, subtitle } = Astro.props;
---


<section class="w-screen">
    <div class="h-screen bg-hero-wallpaper bg-cover bg-center pt-16">
        <div class="text-slate-100 pl-12 pr-12 hero-title md:text-center ">
            <h1 class="font-header font-bold text-GIGA lg:text-SemiGiga md:text-10xl">{title}</h1>
            <h3 class="font-nonheader font-semibold text-7xl">{subtitle}</h3>
        </div>  
    </div>
</section>

<style>
    .hero-title {
      opacity: 0;
      animation: fadeInAnimation 3s ease-in forwards;
    }
    
    @keyframes fadeInAnimation {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    </style>