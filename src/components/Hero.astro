---
export interface Props {
	title: string;
	subtitle: string;
}

const {title, subtitle } = Astro.props;
---


<section class="w-screen">
    <div class="h-screen bg-hero-wallpaper bg-cover bg-center pt-16 max-lg:grid max-lg:place-content-center ">
        <div class="text-slate-100 pl-12 pr-12 hero-title max-lg:text-center max-lg:text-orange-500 max-lg:backdrop-blur-sm max-lg:rounded-lg max-lg:p-4 max-xl:text-pink-500 max-2xl:text-purple-500">
            <h1 class="font-header font-bold text-GIGA leading-none max-sm:text-6xl max-lg:text-8xl max-xl:text-10xl">{title}</h1>
            <h3 class="font-nonheader font-semibold text-7xl  max-sm:text-xl max-lg:text-2xl">{subtitle}</h3>
        </div>  
    </div>
</section>

<style>
    .hero-title {
      opacity: 0;
      animation: fadeInAnimation 3s ease-in forwards;
    }
    
    @keyframes fadeInAnimation {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    </style>