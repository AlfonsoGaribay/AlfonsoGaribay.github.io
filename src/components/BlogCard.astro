---
const { post } = Astro.props;
const { data, slug } = post;
---
<article class="group rounded-2xl border border-ink/10 bg-white/60 p-6 transition hover:-translate-y-1 hover:border-ink/30">
  <div class="flex items-center justify-between text-xs uppercase tracking-[0.2em] text-ink/60">
    <time datetime={data.pubDate.toISOString()}>
      {data.pubDate.toLocaleDateString('en-US', {
        month: 'short',
        day: 'numeric',
        year: 'numeric'
      })}
    </time>
    {data.tags?.length ? (
      <span>{data.tags[0]}</span>
    ) : null}
  </div>
  <h3 class="mt-4 text-2xl font-semibold text-ink group-hover:text-spice">
    <a href={`/blog/${slug}`}>{data.title}</a>
  </h3>
  <p class="mt-3 text-sm text-ink/70">{data.description}</p>
</article>
