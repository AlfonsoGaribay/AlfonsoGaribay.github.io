---
import BaseLayout from '../../layouts/BaseLayout.astro';
import sampleBg from '../../assets/sample.bg.png';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---
<BaseLayout title={entry.data.title} description={entry.data.description}>
  <article class="mx-auto max-w-3xl">
    <div class="not-prose mb-8 overflow-hidden rounded-2xl border border-ink/10 bg-white/70 shadow-sm">
      <div class="relative aspect-[16/9] w-full">
        <img
          src={sampleBg.src}
          alt={`Banner image for ${entry.data.title}`}
          class="h-full w-full object-cover"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
    <div class="mb-8">
      <p class="text-xs uppercase tracking-[0.4em] text-ink/60">{entry.data.category}</p>
      <h1 class="mt-3 text-4xl font-semibold leading-tight">{entry.data.title}</h1>
      <p class="mt-3 text-base text-ink/70">{entry.data.description}</p>
      <p class="mt-4 text-sm text-ink/60">{entry.data.year}</p>
    </div>
    <div class="prose prose-neutral max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
