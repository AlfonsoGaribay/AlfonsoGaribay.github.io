--- 
export interface props {
    title: string
    custom: string
}

const { title, custom } = Astro.props

const defaultStyles = "max-w-screen-2xl mx-auto min-h-[20%] text-zinc-100 flex flex-col justify-between"
---


<section 
    id={title} 
    class=`${defaultStyles} py-16  ${custom}`>
    <div class="min-h-100">
        <h1 class="text-6xl font-header opacity-25 text-left">{title}</h1>
        <div class="">
            <slot class="bg-blue-600"/>
        </div>
    </div>
</section>
  
  